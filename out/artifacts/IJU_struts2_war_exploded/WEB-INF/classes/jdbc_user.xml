<struts>
        <package name="jdbc_user" extends="struts-default">
            <action name="user_list" class="controller.UserAction">
                <result>/table_alluser.jsp</result>
            </action>
            <action name="user_edit" class="controller.UserAction" method="edit">
                <result>/table_alluser.jsp</result>
            </action>
            <action name="user_save" class="controller.UserAction" method="save">
                <result type="redirect">/user_save_suc.jsp</result>
                <result name="error" type="redirect">/user_save_error.jsp</result>
            </action>
            <action name="user_update" class="controller.UserAction" method="update">
                <result type="redirect">/user_update_suc.jsp</result>
                <result name="error" type="redirect">/user_update_error.jsp</result>
            </action>
            <action name="user_del" class="controller.UserAction" method="del">
                <result type="redirect">/user_del_suc.jsp</result>
                <result name="error" type="redirect">/user_del_error.jsp</result>
            </action>
